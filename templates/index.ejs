<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>StreamerJS</title>
  <link href="/_resources/styles.css" rel="stylesheet">
</head>

<body>
  <div class="apptitle">
    <h1>StreamerJS</h1>
  </div>

  <main>

    <section class="ips window">

      <h2> Local/Remote </h2>

      <ul>
        <% ips.forEach(function(ip) { %>
          <li>
            <a href="http://<%=ip%>:<%=port%>/">http://<%=ip%>:<%=port%>/</a>
          </li>
          <% }) %>
      </ul>
    </section>

    <section class="scenes button">
      <h2>Scenes</h2>
      <p>
        Go to /scenes/ to open your scene pages and add
        them to your OBS scene in a browser component.
      </p>
    </section>

    <% if (control) { %>
      <section class="control button">

        <p>
        <h2>Control</h2>
        Go to /control/ to open your control page.
        </p>
      </section>
      <% } %>
  </main>
</body>

</html>